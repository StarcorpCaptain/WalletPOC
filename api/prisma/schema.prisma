datasource db {
    provider = "postgresql"
    url      = env("MAIN_DB_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id              String   @default(uuid())
    devicePublicKey String
    wallets         Wallet[]

    @@unique([id, devicePublicKey])
}

model Wallet {
    id            String  @id @default(uuid())
    genericSecret String?
    mainShare     String?


    user            User   @relation(fields: [userId, devicePublicKey], references: [id, devicePublicKey])
    userId          String
    devicePublicKey String
}
