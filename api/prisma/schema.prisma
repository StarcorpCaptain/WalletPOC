datasource db {
    provider = "postgresql"
    url      = env("MAIN_DB_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id              String   @default(uuid())
    devicePublicKey String
    wallets         Wallets?

    @@unique([id, devicePublicKey])
}

model Wallets {
    id        String @id @default(uuid())
    mainShare String


    user            User   @relation(fields: [userId, devicePublicKey], references: [id, devicePublicKey])
    userId          String
    devicePublicKey String

    @@unique([userId, devicePublicKey])
}
